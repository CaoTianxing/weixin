.navbar {
    width: 100vw;
    background-color: #FAFAFA;
    /* background-color: #ccc; */
    position: fixed;
    z-index: 1000;
    border-bottom: 1px solid #f5f5f5;
    box-shadow: 0px 0px 5px 1px rgba(0, 0, 0, .2);
}

.title-container {
    height: 96rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.capsule {
    height: 56rpx;
    /* border: 0.5rpx solid #777; */
    border-radius: 16px;
    display: flex;
    align-items: center;
}

.capsule>view {
    width: 84rpx;
    height: 75%;
    position: relative;
}

.capsule>view:nth-child(2) {
    border-left: 1px solid #000;
}

.capsule image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.title {
    color: black;
    position: absolute;
    left: 50%;
    font-size: 30rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    transform: translateX(-50%);
}