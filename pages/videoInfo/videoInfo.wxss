page{
    background-color: #fff;
}


.pageBox{
  position: absolute;
  width:100%;
  padding-bottom: 100rpx;
  
}
.title{
    padding-top: 115rpx;
    text-align: center;
    font-size: 34rpx;
    color: #3775F5;
    font-weight: bold;
}
.title text{
    font-size: 34rpx;
    font-weight: bold;
}
.title-btm{
    margin-top: 30rpx;
    margin-bottom: 106rpx;
}

.videoBox{
    margin: 0 30rpx;
    width: 690rpx;
    box-sizing: border-box;
    height: 320rpx;
    position: relative;
    overflow: hidden;
    border-radius: 5px;
}
.viewCoverImg{
    position: absolute;
    width: 100%;
    top: 50%;
    left: 50%;
    z-index: 300;
    transform: translate(-50%,-50%)
}

video{
    width: 100%;
    height: 100%;
    

}

.buttonBox{
    padding: 0 30rpx;
    margin-top: 90rpx;
    overflow: hidden;

}


.buttonBox button{
    width: 320rpx;
    height: 70rpx;
    line-height: 70rpx;
    float: left;
    text-align: center;
    border-radius: 35px;
    font-size: 26rpx;
    color: #fff;
    background-color: #3775F5;
}

.buttonBox button:last-child{
    margin-left: 50rpx;
}


/* 图片列表 */
.ul{
  margin-top: 60rpx;

}
.li{
  float: left;
  width: 150rpx;
  height: 150rpx;
  margin-left: 30rpx;
  position: relative;
  z-index: 10
}
.li .img{
  width: 100%;
  height: 100%;
  border-radius: 3px;
}

.shutdown{
  background-color: #fff;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  z-index: 100
}

.addImg {
  float: left;
  width: 150rpx;
  position: relative;
  height: 150rpx;
  border: 1px solid rgba(55, 117, 245, 1);
  border-radius: 5px;

}

.addCoverImg{
    position: absolute;
    top: 50%;
    right: -170%;
    font-size: 32rpx;
    color: #3775F5;
    transform: translateY(-50%)
}

