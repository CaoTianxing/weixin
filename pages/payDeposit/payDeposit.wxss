.tradingStatus {
  padding: 36rpx 30rpx;
  background-color: #fff;
  overflow: hidden;
}

.logo {
  height: 90rpx;
  width: 90rpx;
  float: left;
}

.logo-c {
  float: left;
}

.logo-c text {
  text-align: left;
  display: block;
}

.logo-c {
  margin-left: 30rpx;
}

.logo-r {
  float: right;
}

.logo-r > text {
  display: block;
  text-align: left;
}

.sincerity {
  height: 100rpx;
  padding-right: 30rpx;
  line-height: 100rpx;
  background-color: #fff;
}

.sincerityTitle {
  padding-left: 30rpx;
  font-weight: bold;
  border-left: 3px solid #6c4afd;
}

.sincerity-r {
  float: right;
  font-size: 26rpx;
  color: #404040;
}

.sincerity-r view {
  float: right;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  color: #736939;
  background: linear-gradient(90deg, rgba(255, 228, 85, 1), rgba(231, 183, 0, 1));
  border-radius: 50rpx;
  text-align: center;
  margin-top: 25rpx;
  margin-left: 20rpx;
}

.sincerity-r text {
  color: #404040;
  font-size: 26rpx;
}

.gender {
  padding-right: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  background-color: #fff;
}

.gender-r {
  float: right;
  font-size: 30rpx;
  color: #b3b3b3;
}

.gender .hrX {
  height: 1rpx;
  width: 95%;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  z-index: 100;
  border-top: 1px solid #f5f5f5;
}

.WasInvitedTo {
  background-color: #fff;
  padding: 30rpx;
}

.WasInvitedToIn {
  border-radius: 10rpx;
  box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  background: rgba(255, 255, 255, 1);
}

/* 用户 */

.filtrateResultLi-t {
  position: relative;
}

.distance {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: #bfbfbf;
}

.userInfo {
  margin-left: 120rpx;
}

.userName {
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 12rpx;
}

.userInfoIcon {
  margin-top: 20rpx;
}

.userInfoIcon .sex {
  position: relative;
  float: left;
}

.userInfoIcon .sex text {
  position: absolute;
  height: 26rpx;
  line-height: 26rpx;
  left: 25rpx;
  top: 0;
  font-size: 22rpx;
  color: #fff;
}

.userInfoIcon > image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.sex > image {
  width: 56rpx;
  height: 26rpx;
}

.userImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  float: left;
}

.describeLi {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #fafafa;
}

.describeLi-l {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.describeLi-r {
  font-size: 30rpx;
  float: right;
  color: #999;
}

.introduce {
  border-radius: 10rpx;
  height: 200rpx;
  font-size: 26rpx;
  padding: 10rpx 10rpx;
  background: rgba(250, 250, 250, 1);
}

.submit {
  overflow: hidden;
  margin-top: 50rpx;
}

.submit button {
  float: left;
  font-size: 24rpx;
  text-align: center
}

