page{
  width:100%;
  height:100%;
  background-color: #fff;
}
.container{
  flex-direction: row;
  height:100%;
  position: absolute;
}
.left{
  width:160rpx;
  height:100%;
  float: left;
  position: fixed;left: 0;
}
.l-li {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 26rpx;
}
.left scroll-view{
  height:100%;
  background: rgba(235, 235, 235, 0.8);
  color: #808080;
}

.right{
  flex:1;
  height:100%;
  margin-left: 160rpx;
}
.right scroll-view{
  height:100%;
}
.l-active{
  border-left: 3px solid #6545C9;
  background-color: #fff;
  font-weight: bold;
  color: #000;
}

.r-li {
  margin-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 15rpx 1rpx rgba(0, 0, 0, 0.1);
}
.r-li:first-child{
  margin-top: 0;
}
.r-li:last-child{
  padding-bottom: 100rpx;
}


.title {
  text-align: left;
  font-size: 26rpx;
  color: #262626;
  font-weight: bold;
  display: block;
  padding: 28rpx 0 0 26rpx;
}

.r-li-nav {
  overflow: hidden;
}

.navList {
  margin-top: 36rpx;
  width: 33.33%;
  float: left;
  text-align: center;
  padding-bottom: 30rpx;
}

.navList image {
  width: 70rpx;
  height: 70rpx;
  margin: auto;
  display: block;
}

.navList text {
  margin-top: 14rpx;
  display: block;
}
