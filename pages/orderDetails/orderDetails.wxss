.user {
  background-color: #fff;
  padding: 32rpx 30rpx;
  overflow: hidden;
  position: relative;
}

.userImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  float: left;
}

.userInfo{
  margin-left: 130rpx;
}

.userInfo-t {
  overflow: hidden;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-top: 10rpx;
}

.userInfo-t > text {
  float: left;
}

.age {
  position: relative;
  float: left;
}

.age image {
  width: 70rpx;
  height: 32rpx;
  position: absolute;
}

.age text {
  position: relative;
  z-index: 10;
  color: #fff;
  padding-left: 28rpx;
}

.usericon {
  float: left;
  margin-left: 20rpx;
}

.usericon image {
  width: 32rpx;
  height: 32rpx;
  float: left;
  margin-left: 8rpx;
}

.userInfo-c {
  overflow: hidden;
  margin-top: 20rpx;
}

.userInfo-b {
  position: absolute;
  right: 30rpx;
  top: 48rpx;
  color: #bfbfbf;
  font-size: 26rpx;
}

.content {
  padding: 0 30rpx;
  background-color: #fff;
  height: 150rpx;
  line-height: 150rpx;
}

.logo {
  margin: 30rpx 0;
  width: 90rpx;
  height: 90rpx;
}

.stroll {
  margin-left: 32rpx;
  font-size: 32rpx;
  color: #ff6900;
}

.price {
  font-size: 28rpx;
  float: right;
  color: #595959;
}

.demandLi {
  height: 100rpx;
  padding: 0 30rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.last-demandLi {
  padding: 0 30rpx;
  background-color: #fff;
}

.last-demandLi-l {
  height: 100rpx;
  line-height: 100rpx;
}

.last-demandLi-r {
  margin-left: 150rpx;
  padding: 30rpx 0;
  line-height: 41rpx;
}

.transactionRecord {
  overflow: hidden;
  background-color: #fff;
  padding: 0 30rpx;
}

.transactionRecordLi {
  height: 100rpx;
  line-height: 100rpx;
}

/* 其他应邀者轮播 */
swiper{
 height: 446rpx;
 border-radius: 3px;

}
swiper-item{
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow:0px 0px 15px 0px rgba(0, 0, 0, 0.1);
}
.swiper-t{
  overflow: hidden;
}

.swiper-t-l image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
/*年龄*/
.userAge{
  width: 56rpx;
  height: 26rpx;
  float: left;
  position: relative;
}
.userAge image{
  width: 100%;
  height: 100%;
}
.userAge text{
  top: -2rpx;
  float: left;
  left: 20rpx;
  font-size: 22rpx;
  color: #fff;
  position: absolute;
}
.swiper-userInfo{
  overflow: hidden;
}
.swiper-userName{
  font-weight: bold;
  margin-top: 12rpx;
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.certification{

}
.certification image{
  width: 26rpx;
  height: 26rpx;
  display: inline-block;
  margin-left: 10rpx;
}


.swiper-t-r{
  margin-left: 130rpx;
  overflow: hidden;
  position: relative
}

.gprs{
  position: absolute;
  top: 0;
  right: 0;
  color: #BFBFBF;
  font-size: 26rpx;
}

.swiper-m{
}

.swiper-m-li{
  border-bottom: 1px solid #FAFAFA;
  height: 80rpx;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333333;
  font-weight: bold
}

.swiper-m-li text:last-child{
  color: #999999;
  font-weight: normal
}



.btn{
  margin: auto;
  padding: 30rpx 0;
  background-color: #fff;
}
.btn button {
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(90deg, rgba(115, 82, 255, 1), rgba(96, 59, 255, 1));
  border-radius: 35px;
  color: #fff;
}
