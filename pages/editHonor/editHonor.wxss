.itemLi:first-child {
  margin-top: 20rpx;
}

.itemLi {
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1px solid #F2F2F2;
}

.itemLi-l {
  font-size: 30rpx;
  color: #595959
}

.itemLi-r {
  font-size: 28rpx;
  margin-left: 130rpx;
  overflow: hidden;
}



.itemLi-r input {
  font-size: 28rpx;
  height: 98rpx;
  text-align: right;
  line-height: 98rpx;
}

.editInfo {
  padding: 0 30rpx;
  overflow: hidden;
  background-color: #fff;
  color: #595959
}

.editInfo-in {
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.editInfoTextarea {
  height: 95rpx;
}
textarea{
  width: 100%;
  height: 100%;
}


/* 图片列表 */
.ul{
  padding-bottom: 20rpx;
}
.li:first-child{
  margin-left: 0;

}
.li{
  float: left;
  width: 150rpx;
  height: 150rpx;
  margin-left: 30rpx;
  position: relative;
  z-index: 10
}
.li .img{
  width: 100%;
  height: 100%;
  border-radius: 3px;
}

.shutdown{
  background-color: #fff;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  z-index: 100
}

.addImg {
  float: left;
  width: 150rpx;
  height: 150rpx;
  border: 1px solid rgba(55, 117, 245, 1);
  border-radius: 5px;
}